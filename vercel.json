{
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": { 
        "includeFiles": "api/model.pkl"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 200
    }
  ]
}